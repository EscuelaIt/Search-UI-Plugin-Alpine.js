{
  "commitizen": {
    "name": "cz_conventional_commits",
    "tag_format": "v$version",
    "version_scheme": "semver",
    "version_provider": "npm",
    "update_changelog_on_bump": true,
    "major_version_zero": false,
    "version_files": [
      "package.json",
      "readme.txt:Stable tag",
      "structeezy.php:Version"
    ]
  }
}
